
function s-mumps-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo mumps_$VERSION.tgz
}

function s-mumps-out-of-tree()
{
    echo false
}

function s-mumps-depends()
{
    echo s-scalapack
}

function s-mumps-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    MUMPSDIR          $PREFIX
    set-var    MUMPSDIR_ROOT_DIR $PREFIX
    add-to-var LD_LIBRARY_PATH   $PREFIX/lib
}

function s-mumps-config()
{
    local PREFIX=$1
    local TARGET=$2

    cp /home/es4c769n/Support/Outils/scbi-salome/scripts.d/patches/mumps_Makefile.inc ../src/Makefile.inc
}

function s-mumps-build()
{
    local PREFIX=$1
    local TARGET=$2

    make -j4
}

function s-mumps-install()
{
    local PREFIX=$1
    local TARGET=$2

    mkdir -p $PREFIX/include && \
    cp -pv include/* $PREFIX/include && \
    mkdir $PREFIX/lib && \
    cp -pv lib/* $PREFIX/lib
}

function s-mumps-prefix()
{
    echo NONE
}