#scbi/scbi --store PIP_INDEX https://nexus.retd.edf.fr/repository/pypi-all/pypi
#scbi/scbi --store PIP_TRUSTED_HOST nexus.retd.edf.fr

function s-python-modules-pre-config()
{
    rm -f module.list
}

function s-python-modules-config()
{
    local PREFIX=$1
    local TARGET=$2
    local VARIANT=$3

    local OPTIONS="$(get-config-options $PREFIX $TARGET $VARIANT)"

    for V in $OPTIONS; do
        echo $V >> module.list
    done
}

function s-python-modules-pre-install()
{
    #  Setup PyPI URL
    PYPIURL=$(scbi-store-get-key PYPIURL)

    mkdir -p $PREFIX/lib/python$PYTHON_VERSION/site-packages
    # To not use nexus
    #echo "[easy_install]" > setup.cfg
    #echo "index-url = $PYPIURL" >> setup.cfg
}

function s-python-modules-install()
{
    local PREFIX=$1
    local TARGET=$2

    python3 setup.py install --prefix=$PREFIX
}

function s-python-modules-prefix()
{
    echo NONE
}
