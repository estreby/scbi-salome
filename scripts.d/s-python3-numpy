function s-python3-numpy-tar()
{
    local VERSION=$1

    echo default
    echo none
    echo wget
    echo https://minio.retd.edf.fr/salome/YAMM/Public/SALOME/sources/prerequis
    echo numpy-$VERSION.tar.gz
}

function s-python3-numpy-out-of-tree()
{
    echo false
}

function s-python3-numpy-ng-build-depends()
{
    echo s-salome-bin
}

function s-python3-numpy-common-depends()
{
    echo os@-lapack-dev
    echo os@-python3-setuptools
    echo os@-python3
    echo os@-swig
}

function s-python3-numpy-default-depends()
{
    echo os@-python3
}

function s-python3-numpy-build-env()
{
    local PREFIX=$1
    local TARGET=$2

    add-to-var PYTHONPATH $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function s-python3-numpy-env()
{
    local PREFIX=$1
    local TARGET=$2

    set-var    XLUTILS_HOME $PREFIX

    add-to-var PYTHONPATH   $PREFIX/lib/python$PYTHON_VERSION/site-packages
}

function s-python3-numpy-install()
{
    local PREFIX=$1
    local TARGET=$2

    PYPIURL=$(scbi-store-get-key PYPIURL)

    mkdir -p $PREFIX/lib/python$PYTHON_VERSION/site-packages
    echo "[easy_install]" > setup.cfg
    echo "index-url = $PYPIURL" >> setup.cfg
    python3 setup.py install --prefix=$PREFIX
}

function s-python3-numpy-prefix()
{
    echo NONE
}
